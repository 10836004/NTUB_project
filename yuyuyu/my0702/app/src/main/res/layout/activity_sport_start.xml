<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
        android:id="@+id/circular_view"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:m_circle_radius="70"
        app:m_cicle_stroke_width="20"
        app:m_arc_stroke_color="@android:color/white"
        app:m_circle_stroke_color="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:text="Start"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Start"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:text="Stop"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Stop"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Pause"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Pause"/>

    <Button
        android:id="@+id/bt4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Resume"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Resume"/>
    <Button
        android:id="@+id/bt5"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Reset"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Reset"/>
    <Button
        android:id="@+id/bt6"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Finish"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:onClick="btn_Finish"/>

    <TextView
        android:id="@+id/textView7"
