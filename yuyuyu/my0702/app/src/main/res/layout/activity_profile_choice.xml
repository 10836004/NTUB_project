<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_choice"
    android:background="@drawable/underline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/n1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/profile1"
            android:layout_width="421dp"
            android:layout_height="265dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/personal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1111"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/kai08mz"
                android:gravity="center"
                android:text="個人資料"
                android:textColor="#040404"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/profile2"
                android:layout_width="422dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.1"
                android:scaleType="fitXY"
                android:src="@drawable/chart1234" />
            <ImageButton
                android:id="@+id/profile3"
                android:layout_width="422dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.1"
                android:scaleType="fitXY"
                android:src="@drawable/diary1234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2222"
                android:layout_width="300dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:fontFamily="@font/kai08mz"
                android:gravity="center"
                android:text="心情溫度計圓餅圖表"
                android:textColor="#040404"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textView3333"
                android:layout_width="300dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:fontFamily="@font/kai08mz"
                android:gravity="center"
                android:text="查看寫過之心情日記"
                android:textColor="#040404"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/home"
                android:layout_width="101dp"
                android:layout_height="91dp"
                android:layout_weight="1"
                android:background="@drawable/home1" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kai08mz"
                android:gravity="center_horizontal"
                android:text="回首頁"
                android:textSize="30sp" />


        </LinearLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>