<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6CC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="720dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textView10"
                style="@android:style/Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="@font/kai08mz"
                android:text="一、心情溫度計"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="30sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kai08mz"
                android:text="請在下列選擇出你現在的心情"
                android:textColor="#7E7E7E"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="395dp"
                android:layout_height="68dp"
                android:fontFamily="@font/kai08mz"
                android:text="1是心情非常不快樂                                7是心情非常快樂"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:background="@drawable/button">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="418dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/one_button01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="1"
                    android:textSize="30sp" />


                <RadioButton
                    android:id="@+id/one_button02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="2"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/one_button03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="3"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/one_button04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="4"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/one_button05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="5"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/one_button06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="6"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/one_button07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/kai08mz"
                    android:text="7"
                    android:textSize="30sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView90"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="怒氣沖沖失去理智"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView92"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="憤怒發脾氣"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="不高興"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="平靜"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView95"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="開心"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView97"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="興奮"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView96"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="非常快樂"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mood1_back_button"
                    android:layout_width="109dp"
                    android:layout_height="147dp"
                    android:layout_weight="1"
                    android:background="@drawable/back" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="上一步"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mood1_next_button"
                    android:layout_width="109dp"
                    android:layout_height="144dp"
                    android:layout_weight="1"
                    android:background="@drawable/redo" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kai08mz"
                    android:gravity="center"
                    android:text="下一步"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>