<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/underline"
            android:orientation="vertical">

            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/n2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/n3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kai08mz"
                android:gravity="center"
                android:text="個人資料"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/profile1234" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_gravity="center"
                    android:background="@drawable/registered_1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/E_mail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView55"
                            android:layout_width="174dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="姓名："
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/kai08mz"
                            android:hint="王小明"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView88"
                            android:layout_width="128dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="性別："

                            android:textSize="24sp" />

                        <RadioGroup
                            android:layout_width="250dp"
                            android:layout_height="46dp"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/boy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:checked="true"
                                android:fontFamily="@font/kai08mz"
                                android:text="男"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/girl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/kai08mz"
                                android:text="女"
                                android:textSize="18sp" />


                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="136dp"
                            android:layout_height="36dp"
                            android:fontFamily="@font/kai08mz"
                            android:text="E-mail："
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/Email1"
                            android:layout_width="264dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/kai08mz"
                            android:hint="abc@gmail.com 沒有填X"
                            android:inputType="textEmailAddress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="351dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="出生日期："
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/bird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/kai08mz"
                            android:hint="按右邊按鈕"
                            android:inputType="date" />

                        <Button
                            android:id="@+id/btnDate"
                            android:layout_width="178dp"
                            android:layout_height="33dp"
                            android:layout_gravity=""
                            android:layout_weight="1"
                            android:background="@drawable/date1234"
                            android:fontFamily="@font/kai08mz"
                            android:onClick="datePicker"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView58"
                            android:layout_width="396dp"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="就讀年級："
                            android:textSize="24sp" />


                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView59"
                            android:layout_width="289dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="家長姓名："
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/parentname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/kai08mz"
                            android:hint="王大明"
                            android:inputType="textPersonName"
                            android:maxLength="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="稱謂："
                            android:textSize="24sp" />


                        <RadioGroup
                            android:layout_width="250dp"
                            android:layout_height="46dp"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/dad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/kai08mz"
                                android:text="爸爸"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/mom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:checked="true"
                                android:fontFamily="@font/kai08mz"
                                android:text="媽媽"
                                android:textSize="18sp" />


                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="390dp"
                            android:layout_height="42dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kai08mz"
                            android:text="家長手機號碼"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:fontFamily="@font/kai08mz"
                            android:hint="0912345678"
                            android:inputType="phone"
                            android:maxLength="10" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnclass"
                        android:layout_width="73dp"
                        android:layout_height="75dp"
                        android:layout_gravity="right"
                        android:background="@drawable/salvar"
                        android:fontFamily="@font/kai08mz" />

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="right"
                        android:text="存檔"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profile1234" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>