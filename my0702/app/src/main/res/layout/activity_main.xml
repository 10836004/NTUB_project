<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6CC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF6CC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonlogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/lougot"
                android:fontFamily="@font/kai08mz"

                android:text="登出" />

            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:fontFamily="@font/kai08mz"
                android:text=""
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewwelcome"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/kai08mz"
                android:text="歡迎來到 i好心情"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bg1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#03A9F4"
                    android:fontFamily="@font/kai08mz"
                    android:text="心情溫度計"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/thermometer"
                    android:fontFamily="@font/kai08mz" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#2FFF00"
                    android:fontFamily="@font/kai08mz"
                    android:text="心情日記"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="115dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center"
                    android:background="@drawable/diary"
                    android:fontFamily="@font/kai08mz" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFEB3B"
                    android:fontFamily="@font/kai08mz"
                    android:text="遊戲區"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/circus"
                    android:fontFamily="@font/kai08mz" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E91E7D"
                    android:fontFamily="@font/kai08mz"
                    android:text="個人專區"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile"
                    android:fontFamily="@font/kai08mz" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>