<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6CC"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood4txt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/kai08mz"
                        android:text="四、哇!真不簡單，你已經想了方法讓自己心情好一點"
                        android:textColor="#040404"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood4txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/kai08mz"
                        android:hint="請你想想看使用上面方法後，再告訴我們你心情會變得如何?"
                        android:textColor="#040404"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="418dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/four_button07"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:fontFamily="@font/kai08mz"
                        android:text="7"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/kai08mz"
                        android:text="6"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/kai08mz"
                        android:text="5"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/kai08mz"
                        android:text="4"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/kai08mz"
                        android:text="3"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/kai08mz"
                        android:text="2"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/four_button01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        android:fontFamily="@font/kai08mz"
                        android:text="1"
                        android:textSize="24sp" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView997"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="非常快樂"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView996"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="興奮"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView995"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="開心"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView994"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="平靜"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView993"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="不高興"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView992"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="憤怒發脾氣"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView991"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="怒氣沖沖失去理智"
                        android:textColor="#000000"
                        android:textSize="21sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mood4_back_button"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/back" />

                    <TextView
                        android:id="@+id/mood4textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="上一步"
                        android:textColor="#000000"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mood4_next_button"
                        android:layout_width="120dp"
                        android:layout_height="60dp"

                        android:background="@drawable/redo" />

                    <TextView
                        android:id="@+id/mood4textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kai08mz"
                        android:gravity="center"
                        android:text="下一步"
                        android:textColor="#000000"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>